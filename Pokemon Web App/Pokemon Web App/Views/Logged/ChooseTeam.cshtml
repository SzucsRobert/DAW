@model IEnumerable<Pokemon_Web_App.Models.Team>

@{
    ViewData["Title"] = "ChooseTeam";
    Layout = "_LoggedLayout";
}

<h1 class="text-center">ChooseTeam</h1>
<div class="d-flex justify-content-center text-center">
    
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Logo)" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <a class="btn btn-primary" asp-action="AddTeam" asp-route-id="@item.ID">Choose this</a>
                </div>
            </div>
        }


</div>